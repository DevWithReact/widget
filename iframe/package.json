{
  "name": "onramper-widget",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@onramper/widget": "file:../package",
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "scripts": {
    "lint": "eslint src --ext ts,js,tsx --no-ignore --fix",
    "checklint": "eslint src --ext ts,js,tsx --no-ignore",
    "start": "react-scripts start",
    "start:prod": "export REACT_APP_STAGE=prod&&npm start",
    "build": "react-scripts build",
    "build:prod": "export REACT_APP_STAGE=prod&&npm run build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:component": "rm -f -r dist && webpack && npx copyfiles -u 2 \"./src/OnramperWidget/package.json\" \"./src/OnramperWidget/README.md\" ./dist && npx copyfiles \"./LICENSE\" dist && rm -r dist/*/ && rm ./dist/utils.d.ts",
    "publish:component": "cd dist && npm publish"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/react": "^16.9.54",
    "@types/react-dom": "^16.9.9",
    "@types/react-test-renderer": "^16.9.2",
    "prettier": "^2.1.2",
    "react-scripts": "3.4.1",
    "react-test-renderer": "^16.14.0",
    "ts-jest": "^24.3.0",
    "typescript": "^3.9.5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ],
    "coveragePathIgnorePatterns": [
      "./src/*/*.types.{ts,tsx}",
      "./src/index.tsx",
      "./src/serviceWorker.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 95,
        "lines": 95,
        "functions": 95
      }
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy",
      "src/(.*)$": "<rootDir>/src/$1"
    }
  }
}
